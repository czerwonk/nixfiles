{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#333333"
  },
  "blocks": [
    {
      "segments": [
        {
          "type": "text",
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\uE0B2"
        },
        {
          "type": "status",
          "style": "plain",
          "background": "p:background",
          "foreground_templates": [
            "{{if gt .Code 0}}#C34043{{end}}",
            "{{if eq .Code 0}}#76946A{{end}}"
          ],
          "template": " {{if eq .Code 0}}✔{{ else }}✘ {{ .Code }}{{ end }} <#808080>\uE0B3</>",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "executiontime",
          "style": "plain",
          "background": "p:background",
          "foreground": "#a8a8a8",
          "template": "   {{ .FormattedMs }} <#808080>\uE0B3</>",
          "properties": {
            "threshold": 500,
            "style": "austin",
            "always_enabled": true
          }
        },
        {
          "type": "text",
          "foreground": "#87af00",
          "background": "p:background",
          "style": "plain",
          "properties": {
            "template": " {{ .Env.SHELL_VI_PROMPT }} <#808080>\uE0B3</>"
          }
        },
        {
          "type": "time",
          "background": "p:background",
          "foreground": "#658594",
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          }
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "background": "p:background",
          "foreground_templates": [
            "{{if .Root }}#C34043{{end}}",
            "{{if not .Root }}#76946A{{end}}"
          ],
          "style": "plain",
          "template": "{{ if or .SSHSession .Root }} {{ .UserName }}{{ if or .SSHSession }}@{{ .HostName }}{{ end }} <#808080>\uE0B1</>{{ end }}"
        },
        {
          "type": "path",
          "background": "p:background",
          "foreground": "#7FB4CA",
          "style": "plain",
          "template": " {{ if not .Writable }} {{ end }}{{ if not .RootDir }}/{{ end }}{{ .Path }} ",
          "properties": {
            "style": "agnoster_short",
            "max_depth": 5
          }
        },
        {
          "type": "git",
          "background": "p:background",
          "foreground": "#98BB6C",
          "style": "plain",
          "template": "<#808080>\uE0B1</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} <#DCA561>\uF044 {{ .Working.String }}</>{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }}{{ end }}{{ if .Staging.Changed }} <#658594>\uF046 {{ .Staging.String }}</>{{ end }} ",
          "properties": {
            "fetch_status": true,
            "branch_max_length": 25
          }
        },
        {
          "type": "text",
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\ue0b0"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}#C34043{{end}}",
      "{{if eq .Code 0}}#76946A{{end}}"
    ],
    "template": "❯ "
  },
  "version": 2
}
