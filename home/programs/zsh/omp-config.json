{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#333333"
  },
  "blocks": [
    {
      "segments": [
        {
          "type": "text",
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\uE0B2"
        },
        {
          "type": "status",
          "style": "plain",
          "background": "p:background",
          "foreground_templates": [
            "{{if gt .Code 0}}#C34043{{end}}",
            "{{if eq .Code 0}}#76946A{{end}}"
          ],
          "template": " {{if eq .Code 0}}✔{{ else }}✘ {{ .Code }}{{ end }} <#808080>\uE0B3</>",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "time",
          "background": "p:background",
          "foreground": "#658594",
          "template": " {{ .CurrentDate | date .Format }} ",
          "properties": {
            "time_format": "15:04:05"
          },
          "style": "plain"
        }
      ],
      "type": "rprompt"
    },
    {
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "background": "p:background",
          "foreground": "#76946A",
          "style": "plain",
          "template": "{{ if .SSHSession }} {{ .UserName }}@{{ .HostName }} <#808080>\uE0B1</>{{ end }}"
        },
        {
          "type": "path",
          "background": "p:background",
          "foreground": "#7FB4CA",
          "style": "plain",
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "background": "p:background",
          "foreground": "#98BB6C",
          "style": "plain",
          "template": " <#808080>\uE0B1</> {{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }} ",
          "properties": {
            "branch_max_length": 25,
            "fetch_status": true
          }
        },
        {
          "type": "text",
          "background": "transparent",
          "foreground": "p:background",
          "style": "plain",
          "template": "\ue0b0"
        }
      ],
      "type": "prompt"
    }
  ],
  "final_space": true,
  "transient_prompt": {
    "background": "transparent",
    "foreground_templates": [
      "{{if gt .Code 0}}#C34043{{end}}",
      "{{if eq .Code 0}}#76946A{{end}}"
    ],
    "template": "❯ "
  },
  "version": 2
}
